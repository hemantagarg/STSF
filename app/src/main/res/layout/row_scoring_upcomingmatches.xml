<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardElevation="3sp"
    card_view:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/event_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/text_event_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="@dimen/dp10"
                android:text="EVENT TYPE"
                android:textColor="@color/logocolor"
                android:textSize="@dimen/text_size_12"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_match_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp10"
                android:padding="@dimen/dp5"
                android:text=""
                android:textColor="@color/button_selected_bg"
                android:textSize="@dimen/text_size_12"
                android:textStyle="bold" />
        </RelativeLayout>


        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/event_type"
            android:alpha=".3"
            android:background="@color/textcolordark"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textdateofmatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/dp12"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rl_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textdateofmatch">

            <RelativeLayout
                android:id="@+id/rl_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_header1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/text_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp5"
                        android:padding="@dimen/dp5"
                        android:scaleType="fitXY"
                        android:text="TUESDAY" />

                    <TextView
                        android:id="@+id/text_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_day"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="28"
                        android:textSize="@dimen/dp40"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_date"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/dp10"
                        android:padding="@dimen/dp2"
                        android:text="nov"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_month"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/dp10"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:text="12:30 pm" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rl_header1"
                    android:padding="@dimen/dp5">


                    <RelativeLayout
                        android:id="@+id/relmatchvs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp10">

                        <ImageView
                            android:id="@+id/teama"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_alignParentLeft="true"
                            android:padding="@dimen/dp5"
                            android:src="@drawable/logo_sportz" />

                        <TextView
                            android:id="@+id/vs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_horizontal"
                            android:text="VS"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp20" />

                        <ImageView
                            android:id="@+id/teamb"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_alignParentRight="true"
                            android:padding="@dimen/dp5"
                            android:src="@drawable/logo_sportz" />

                        <TextView
                            android:id="@+id/text_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/teamb"
                            android:layout_marginTop="@dimen/dp10"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_11"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_teamname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/teamb"
                            android:layout_marginTop="@dimen/dp10"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_11"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/relmatchvs"
                        android:layout_marginLeft="@dimen/dp40"
                        android:maxLines="2"
                        android:text="location"
                        android:textColor="@color/logocolor"
                        android:textSize="@dimen/text_size_15"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/text_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/text_title"
                        android:layout_marginLeft="@dimen/dp10"
                        android:drawableLeft="@drawable/location"
                        android:drawablePadding="@dimen/dp10"
                        android:gravity="center_vertical"
                        android:maxLines="3"
                        android:text="location"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/text_scorer1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_location"
                        android:layout_marginLeft="@dimen/dp10"
                        android:text="location"
                        android:textColor="@color/blue_color"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/text_scorer1name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_scorer1"
                        android:layout_marginLeft="@dimen/dp10"
                        android:text="location"
                        android:textColor="@color/textcolordark"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/text_scorer2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_scorer1name"
                        android:layout_marginLeft="@dimen/dp10"
                        android:text="location"
                        android:textColor="@color/blue_color"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/text_scorer2name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_scorer2"
                        android:layout_marginLeft="@dimen/dp10"
                        android:text="location"
                        android:textColor="@color/textcolordark"
                        android:textSize="@dimen/text_size_12" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
