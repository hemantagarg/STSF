<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_stats"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_teama"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/logocolor"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="TeamA"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_11" />

            <Button
                android:id="@+id/btn_teamb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_bg_unselected"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="TeamB"
                android:textAllCaps="false"
                android:textColor="@color/logocolor"
                android:textSize="@dimen/text_size_11" />


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_stats">

            <LinearLayout
                android:id="@+id/layout_team1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/button_bg"
                    android:padding="@dimen/dp10">

                    <TextView
                        android:id="@+id/text_team1batting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dp10"
                        android:drawableRight="@drawable/up_arrow_white"
                        android:text="team Batting"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_team1batting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/layout_bg"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp10"
                        android:weightSum="5">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="left"
                            android:text="Batsmen"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14" />

                        <View
                            android:layout_width="@dimen/dp1"
                            android:layout_height="match_parent"
                            android:background="@color/view_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="R"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14" />

                        <View
                            android:layout_width="@dimen/dp1"
                            android:layout_height="match_parent"
                            android:background="@color/view_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="B"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14" />

                        <View
                            android:layout_width="@dimen/dp1"
                            android:layout_height="match_parent"
                            android:background="@color/view_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="SR"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14"
                            android:visibility="visible" />

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/list_team1batting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp3"
                        android:visibility="visible" />

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:background="@color/button_bg"
                    android:padding="@dimen/dp10">

                    <TextView
                        android:id="@+id/text_team1bowling"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dp10"
                        android:drawableRight="@drawable/arrow_down_white"
                        android:text="team Batting"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_team1bowling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/layout_bg"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp10"
                        android:weightSum="6">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="left"
                            android:text="Bowlers"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14" />

                        <View
                            android:layout_width="@dimen/dp1"
                            android:layout_height="match_parent"
                            android:background="@color/view_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="o"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14" />

                        <View
                            android:layout_width="@dimen/dp1"
                            android:layout_height="match_parent"
                            android:background="@color/view_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="R"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14" />

                        <View
                            android:layout_width="@dimen/dp1"
                            android:layout_height="match_parent"
                            android:background="@color/view_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="W"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14" />

                        <View
                            android:layout_width="@dimen/dp1"
                            android:layout_height="match_parent"
                            android:background="@color/view_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Econ"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14"
                            android:visibility="visible" />

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/list_team1bowling"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp3"
                        android:visibility="visible" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_team2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/button_bg"
                    android:padding="@dimen/dp10">

                    <TextView
                        android:id="@+id/text_team2batting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dp10"
                        android:drawableRight="@drawable/up_arrow_white"
                        android:text="team Batting"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_team2batting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/layout_bg"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp10"
                        android:weightSum="5">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="left"
                            android:text="Batsmen"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14" />

                        <View
                            android:layout_width="@dimen/dp1"
                            android:layout_height="match_parent"
                            android:background="@color/view_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="R"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14" />

                        <View
                            android:layout_width="@dimen/dp1"
                            android:layout_height="match_parent"
                            android:background="@color/view_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="B"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14" />

                        <View
                            android:layout_width="@dimen/dp1"
                            android:layout_height="match_parent"
                            android:background="@color/view_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="SR"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14"
                            android:visibility="visible" />

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/list_team2batting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp3"
                        android:visibility="visible" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:background="@color/button_bg"
                    android:padding="@dimen/dp10">

                    <TextView
                        android:id="@+id/text_team2bowling"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dp10"
                        android:drawableRight="@drawable/arrow_down_white"
                        android:text="team Batting"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_team2bowling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/layout_bg"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp10"
                        android:weightSum="6">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="left"
                            android:text="Bowlers"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14" />

                        <View
                            android:layout_width="@dimen/dp1"
                            android:layout_height="match_parent"
                            android:background="@color/view_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="o"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14" />

                        <View
                            android:layout_width="@dimen/dp1"
                            android:layout_height="match_parent"
                            android:background="@color/view_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="R"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14" />

                        <View
                            android:layout_width="@dimen/dp1"
                            android:layout_height="match_parent"
                            android:background="@color/view_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="W"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14" />

                        <View
                            android:layout_width="@dimen/dp1"
                            android:layout_height="match_parent"
                            android:background="@color/view_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Econ"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14"
                            android:visibility="visible" />

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/list_team2bowling"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp3"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/text_nodata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:text="No data found"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_16"
                android:visibility="gone" />

        </RelativeLayout>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>