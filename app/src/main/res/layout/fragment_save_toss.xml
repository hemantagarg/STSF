<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp20"
        android:background="@color/white">


        <TextView
            android:id="@+id/name_requirement_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cross_img_rel"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-15dp"
            android:layout_marginTop="@dimen/dp10"
            android:text="Save Toss Result"
            android:textColor="@color/textcolordark"
            android:textSize="@dimen/text_size_16" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/name_requirement_txt"
            android:layout_margin="@dimen/dp25"
            android:background="@color/view_color" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_margin="@dimen/dp10"
            android:text="Match"
            android:textColor="@color/textcolordark"
            android:textSize="@dimen/text_size_14" />


        <LinearLayout
            android:id="@+id/rl_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_title"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:layout_margin="@dimen/dp10"
                android:text="Toss Winning Team"
                android:textColor="@color/textcolordark"
                android:textSize="@dimen/text_size_14" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/edit_bg">

                <Spinner
                    android:id="@+id/spinnerWinningTeam"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:layout_margin="@dimen/dp10"
                android:text="Selection"
                android:textColor="@color/textcolordark"
                android:textSize="@dimen/text_size_14" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/edit_bg">

                <Spinner
                    android:id="@+id/spinnerSelectionType"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true" />
            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/rl_share"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/grey_button_selecor"
            android:text="Submit"
            android:textColor="@color/white" />

    </RelativeLayout>
</RelativeLayout>